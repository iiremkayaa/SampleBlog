@model UserLoginModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "_Layout";
}


    <div class="container">
        <div style="text-align:center;padding-left:20%;padding-right:20%">
            <div class="card my-4">
                <h5 class="card-header">Login</h5>
                <div class="card-body text-center">
                    <form asp-action="Index" asp-controller="Share" method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Username" style="font-weight:bold"></label>
                            <span asp-validation-for="@Model.Username"></span>
                            <input asp-for="@Model.Username">
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Password"  style="font-weight:bold"></label>
                            <span asp-validation-for="@Model.Password"></span>
                            <input asp-for="@Model.Password" type="password">
                        </div>
                        <div class="form-group">
                            <input type="checkbox" asp-for="@Model.RememberMe" />
                            <label asp-for="@Model.RememberMe">Remember me</label>
                        </div>
                        <input type="submit" value="Login" class="btn btn-primary pl-4 pr-4 pb-1 pt-1"   />
                    </form>
                    

                    <div class="text-center pt-4">
                        <span class="txt1">
                            Create an account?
                        </span>

                        <a asp-action="Register" asp-controller="Home" class="txt2 hov1">
                            Sign up
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>